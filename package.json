{
  "name": "@kortoaus/cas-scale",
  "version": "1.0.3",
  "description": "A lightweight TypeScript library for reading weight data from CAS PD-II serial scales.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --out-dir dist",
    "dev": "tsup src/index.ts --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cas",
    "scale",
    "serialport",
    "weight",
    "typescript",
    "pd-ii",
    "kortoaus"
  ],
  "author": "kortoaus",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.12",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "serialport": "10.5.0"
  }
}
